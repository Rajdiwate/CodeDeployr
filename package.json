{
  "name": "CodeDeployr",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/db && bunx prisma generate",
    "db:migrate": "cd packages/db && bunx prisma migrate dev",
    "db:studio": "cd packages/db && bunx prisma studio",
    "db:apply": "cd packages/db && bunx prisma migrate deploy",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.17",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
